<%- include('partials/header', { title: 'Companion\'s Corner - Create an Account' }) %>

<div class="main-content">
    <nav class="nav">
        <a href="/">Home</a>
        <a href="/find">Find a dog/cat</a>
        <a href="/dog_care" class="active">Dog Care</a>
        <a href="/cat_care">Cat Care</a>
        <a href="/create_account" class="active">Create an Account</a>
        <a href="/giveaway">Have a pet to give away</a>
        <a href="/contact">Contact Us</a>
        <% if (user) { %>
            <a href="/logout">Log Out</a>
        <% } %>
    </nav>
    <div class="account-form-container" style="padding-left: 250px;">
        <h2>Create an Account</h2>
        <p>Please fill in the details below to create your account.</p>
        <form class="form-page" action="/create_account" method="post">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required pattern="[A-Za-z0-9]+" placeholder="Letters and numbers only">
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required pattern="(?=.*[A-Za-z])(?=.*[0-9]).{4,}" placeholder="At least 4 characters and at least one letter and one number">
            </div>

            <div class="form-group">
                <button type="submit" class="btn-create-account">Create Account</button>
            </div>
        </form>
        <% if (message) { %>
            <p><%= message %></p>
        <% } %>
    </main>
</div>

<%- include('partials/footer') %>
